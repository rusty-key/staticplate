@define-mixin respond-to $media {
  @if $media == mob {
    @media only screen and (max-width: 720px) { @mixin-content; }
  } @else if $media == tab {
    @media only screen and (max-width: 992px) { @mixin-content; }
  } @else if $media == desk {
    @media only screen and (max-width: 1200px) { @mixin-content; }
  }
}
